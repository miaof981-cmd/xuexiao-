<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>上传文件列表</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    .container { max-width: 960px; margin: 0 auto; padding: 16px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 8px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>上传文件列表</h1>
    <p><a href="/admin"><button>返回后台</button></a></p>
    <table>
      <thead>
        <tr><th>文件名</th><th>大小</th><th>预览</th><th>直链</th></tr>
      </thead>
      <tbody>
        <% items.forEach(it => { %>
          <tr>
            <td><%= it.name %></td>
            <td><%= (it.size/1024).toFixed(1) %> KB</td>
            <td><img src="<%= it.url %>" alt="" style="max-width:200px; height:auto"/></td>
            <td><a href="<%= it.url %>"><code><%= it.url %></code></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>


