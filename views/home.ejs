<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>学校官网</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
    .pinned { color: #b30000; font-weight: bold; }
    form { display: grid; gap: 8px; }
    input, textarea, select, button { padding: 8px; font-size: 14px; }
    .error { color: #b30000; }
  </style>
  </head>
<body>
  <div class="container">
    <header>
      <h1>学校官网</h1>
      <% if (parent) { %>
        <form method="post" action="/logout">
          <span>欢迎，<%= parent.name %>（学号：<%= parent.studentId %>）</span>
          <button type="submit">退出</button>
        </form>
      <% } %>
    </header>

    <div class="doc-card" style="padding:0; overflow:hidden; margin-bottom:16px">
      <img src="/banners/blue-graduation-hero.svg" alt="欢迎横幅" style="display:block; width:100%; height:auto" />
    </div>
    <div class="masonry">
      <% if (announcements && announcements.length) { %>
        <% announcements.forEach(a => { %>
          <div class="masonry-item">
            <div class="doc-card">
              <div class="doc-header">
                <div class="doc-title">公告</div>
                <div class="doc-meta"><%= a.pinned ? '置顶' : '' %></div>
              </div>
              <div class="doc-body">
                <h3 style="margin:0 0 6px"><%= a.title %></h3>
                <% if (a.image) { %>
                  <img src="<%= a.image %>" alt="" style="max-width:100%; height:auto; border-radius:8px; margin:6px 0" />
                <% } %>
                <p><%= a.content %></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>

      <% if (articles && articles.length) { %>
        <% articles.forEach(n => { %>
          <div class="masonry-item">
            <div class="doc-card">
              <div class="doc-header"><div class="doc-title">文章</div></div>
              <div class="doc-body">
                <h3 style="margin:0 0 6px"><%= n.title %></h3>
                <p><%= n.content %></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>

      <% if (!parent) { %>
        <div class="masonry-item">
          <div class="doc-card">
            <div class="doc-header"><div class="doc-title">家长登录</div></div>
            <div class="doc-body">
              <% if (typeof error !== 'undefined' && error) { %>
                <p class="error"><%= error %></p>
              <% } %>
              <form method="post" action="/login">
                <label>学号</label>
                <input type="text" name="studentId" required />
                <label>密码</label>
                <input type="password" name="password" required />
                <button type="submit">登录</button>
              </form>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="masonry-item">
          <div class="doc-card">
            <div class="doc-header"><div class="doc-title">家长入口</div></div>
            <div class="doc-body"><a href="/records"><button>查看学生档案</button></a></div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>


